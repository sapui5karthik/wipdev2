<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" 	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
>
   <Dialog
      id="newdialog" draggable="true" resizable="true"
      title="Create New Record" contentHeight="200px" contentWidth="617px">
<f:SimpleForm id="newform"
			editable="true"
			layout="ResponsiveGridLayout"		
					
			
			columnsXL="2"
			columnsL="2"
			columnsM="2"
			>
			<f:content>
				<Label text="Unbilled Qty" />
				<Input  width="auto" id="newunbilled"/>
				<Label text="Workpage" />
				<Input width="auto" id="newworkpackage" value="{prjlst>/EngagementProject}"/>
                <Label text="Notes" />
				<Input  width="auto" id="newnotes"/>
				<Label text="Activity Type" />
				<Input width="auto" id="newacttype"/>
<!--                 
                 <Button text="Save" type="Accept"/>
                <Button text="Close" type="Reject" press="_closenewrecord"/> -->
			
			
			</f:content>
		</f:SimpleForm>
      <buttons>
        <Button text="Save" type="Accept" press="_savenewrecord"/>
        <Button text="Close" type="Reject" press="_closenewrecord"/>
      </buttons>
   </Dialog>
</core:FragmentDefinition>