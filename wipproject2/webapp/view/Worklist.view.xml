<mvc:View controllerName="com.chappota.wippoc2.wipproject2.controller.Worklist" xmlns="sap.m" 
xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:semantic="sap.m.semantic" xmlns:smartFilterBar="sap.ui.comp.smartfilterbar" 
xmlns:smartTable="sap.ui.comp.smarttable" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">

    <semantic:SemanticPage id="page">


        <semantic:content>
        
       <Panel headerText="" >
                <content>
	<VBox fitContainer="true">

    <smartFilterBar:SmartFilterBar id="smartFilterBar" 	considerSelectionVariants="true" beforeVariantFetch="onBeforeVariantSave"  afterVariantLoad="onAfterVariantLoad"
    entitySet="ProjectSet" persistencyKey="SmartFilter_Explored" liveMode="true">
<smartFilterBar:controlConfiguration>

<smartFilterBar:ControlConfiguration key="ProjectID" visibleInAdvancedArea="true" index="0" label="{i18n>txt_projid}" hasValueHelpDialog="true"/>
<smartFilterBar:ControlConfiguration key="ProjectName" visibleInAdvancedArea="true" index="1" label="{i18n>txt_projname}" hasValueHelpDialog="false"/>
<smartFilterBar:ControlConfiguration key="Customer" visibleInAdvancedArea="true" index="2" label="{i18n>txt_cust}" hasValueHelpDialog="true"/>
<smartFilterBar:ControlConfiguration key="ProjectStage" visibleInAdvancedArea="true" index="3" label="{i18n>txt_stage}" hasValueHelpDialog="false"/>
<smartFilterBar:ControlConfiguration key="OrgID" visibleInAdvancedArea="true" index="4" label="{i18n>txt_ccode}" hasValueHelpDialog="true"/>
<smartFilterBar:ControlConfiguration key="ProjControllerName" visibleInAdvancedArea="true" index="5" label="{i18n>txt_role}" hasValueHelpDialog="false"/>
<smartFilterBar:ControlConfiguration key="ProjManagerName" visibleInAdvancedArea="true" index="6" label="{i18n>txt_roleplayer}" hasValueHelpDialog="false"/>
<!-- <smartFilterBar:ControlConfiguration key="" visibleInAdvancedArea="true" index="7" label="{i18n>txt_wipexist}" hasValueHelpDialog="false"/> -->
<smartFilterBar:ControlConfiguration key="CostCenter" visibleInAdvancedArea="true" index="8" label="{i18n>txt_costcntr}" hasValueHelpDialog="true"/>
<smartFilterBar:ControlConfiguration key="ProfitCenterName" visibleInAdvancedArea="true" index="9" label="{i18n>txt_prftcntr}" hasValueHelpDialog="true"/>

</smartFilterBar:controlConfiguration>
                	<smartFilterBar:layoutData>
				<FlexItemData shrinkFactor="0"/>
			</smartFilterBar:layoutData>
    </smartFilterBar:SmartFilterBar>
<!-- initiallyVisibleFields="EngagementProject,EngagementProjectName,Customer,CustomerName,ProjectStartDate,ProjectEndDate,ProjectManager,CompanyCode,CostCenter,ProfitCenter" -->
      <!-- enableAutoColumnWidth="true"  -->
<smartTable:SmartTable id="smartTable" entitySet="ProjectSet" smartFilterId="smartFilterBar" tableType="ResponsiveTable" beforeRebindTable="onBeforeRebindTable" 
 useExportToExcel="true" useVariantManagement="true" useTablePersonalisation="true" header="{i18n>txt_prjs}" showRowCount="true" enableAutoBinding="true" 
 initiallyVisibleFields="ProjectID,ProjectName,Customer,CustomerName,StartDate,ProjManagerName,OrgID,CostCenter,ProfitCenter"
 
 
 >
        <smartTable:layoutData>
                        <FlexItemData growFactor="1" baseSize="0%"/>
                    </smartTable:layoutData>
                    <Table growing="true" growingScrollToLoad="false" growingThreshold="100">
                        <columns>
                            <Column >
                                <customData>
                                <core:CustomData key="p13nData" 
                                value='\{"columnKey": "ProjectID", "leadingProperty": "ProjectID","displayBehaviour": "descriptionOnly", "width": "360px", "index" : "0"}' />
                                        </customData>
                                <Text text="{i18n>txt_projid}" />
                            </Column>
                        </columns>
                    <items>
                    <ColumnListItem type="Navigation" press="onPress">
                    <cells>
                        <Link text="{ProjectID}" />
                    </cells>
                    </ColumnListItem>
                    </items>
                    </Table>
                </smartTable:SmartTable>
     </VBox>
                
                </content>
                </Panel>

        </semantic:content>


    </semantic:SemanticPage>

</mvc:View>
